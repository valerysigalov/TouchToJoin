<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.touchtojoin" >
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!--
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CONTACTS"/>
    -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_title">
        <receiver
            android:name="com.app.touchtojoin.SendAlarm"
            android:taskAffinity=""
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="com.app.touchtojoin.SendAlarm" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.app.touchtojoin.PublishAlarm"
            android:taskAffinity=""
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="com.app.touchtojoin.PublishAlarm" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.app.touchtojoin.EventReceiver"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.EVENT_REMINDER" />
                <data android:scheme="content"/>
                <data android:host="com.android.calendar"/>
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.app.touchtojoin.CallListener"
            android:label="@string/app_title" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.app.touchtojoin.BootReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <category android:name="android.intent.category.HOME" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.app.touchtojoin.Preferences"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.CallBack"
            android:theme="@style/Theme.Transparent"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.Defaults"
            android:theme="@style/Theme.Transparent"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="com.app.touchtojoin.Defaults" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.Feedback"
            android:theme="@style/Theme.Transparent"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="com.app.touchtojoin.Feedback" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.SnoozeAlarm"
            android:theme="@style/Theme.Transparent"
            android:taskAffinity=""
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="com.app.touchtojoin.SnoozeAlarm" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.JoinCall"
            android:configChanges="orientation|screenSize"
            android:theme="@style/Theme.Transparent"
            android:taskAffinity=""
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.app.touchtojoin.REDIALog"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:taskAffinity=""
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_title">
            <intent-filter>
                <action android:name="android.intent.action.CALL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
